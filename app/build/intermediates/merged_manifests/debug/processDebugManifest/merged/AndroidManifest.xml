<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paulo_000.readerdiary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="27" />

    <application
        android:name="com.example.paulo_000.readerdiary.Persistencia.App"
        android:allowBackup="true"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/abook"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.ListaLivrosActivity"
            android:label="Seus Livros" />
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.AddLivroActivity"
            android:label="Novo Livro"
            android:parentActivityName="com.example.paulo_000.readerdiary.UI.ListaLivrosActivity" />
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.CadastroActivity"
            android:label="Cadastro" />
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.CapitulosActivity"
            android:label="Capitulos"
            android:parentActivityName="com.example.paulo_000.readerdiary.UI.ListaLivrosActivity" />
        <activity
            android:name="com.example.paulo_000.readerdiary.UI.AddCapituloActivity"
            android:label="Novo Capitulo" />
    </application>

</manifest>